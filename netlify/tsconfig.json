{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./functions",
    "rootDir": "../",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "baseUrl": "../",
    "paths": {
      "@shared/*": ["shared/*"]
    }
  },
  "include": [
    "functions/**/*"
  ],
  "exclude": [
    "node_modules",
    "../server/vite.ts",
    "../vite.config.ts"
  ]
}